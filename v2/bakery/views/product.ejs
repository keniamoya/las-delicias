<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <meta http-equiv="X-UA-Compatible" content="ie=edge"> -->
    <link rel="icon" type="image/png" href="/images/iconGeneral.png" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>
        <%= title %>
    </title>
</head>

<header class="sticky-top">
    <%- include('navbar') -%>
</header>

<body>

    <!-- PRODUCT -->
    <div class="container productArea">
        <hr>
        <form method="post" name="form1">
            <div class="row">
                <div class="col-md-6 col-sm-12 productCol d-flex justify-content-center imgCol">
                    <img class="imgProduct mx-auto d-block" src="/images/<%=product.product_Image%>">
                </div>
                <div class="col-md-6 col-sm-12 productCol imgCol">
                    <div class="row rowProduct d-flex justify-content-center ">
                        <h2 class="name1">
                            <%= product.name %>
                        </h2>
                    </div>
                    <hr>
                    <div class="row rowProduct">
                        <div class="col d-flex justify-content-left imgCol">
                            <span class="categoryName">Precio: $</span>
                            <span class="categoryName">
                                <%= product.price %>
                            </span>
                        </div>
                        <div class="col d-flex justify-content-left">
                            <input id="units" name="units" type="number" required value="0" min="0" max="1000" step="1" onchange="total()" />
                            <span class="categoryName">unidades</span>
                        </div>
                    </div>
                    <hr>
                    <div class="row rowProduct d-flex justify-content-left ">
                        <p class="categoryName">
                            <%= product.description %>
                                <%= product.description %>
                                    <%= product.description %>
                        </p>
                    </div>
                    <hr>
                    <div class="row rowProduct d-flex ">
                        <div class="col imgCol">
                            <span class="categoryName">Total: $</span>
                            <span id="total" name="total" class="categoryName"> 0 </span>
                        </div>
                        <div class="col">
                            <button type="submit" class="btnClose btn categoryName" data-toggle="modal" data-target="#modalBuy" onclick="validation()"><i class="fas fa-shopping-cart"></i> Agregar</button>
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <div class="row d-flex justify-content-left">
                <p class="categoryName"> Instrucciones especiales: </p>
            </div>
            <div class="row d-flex justify-content-left">
                <textarea id="specification" name="specification" class="form-control" rows="3"></textarea>
            </div>
        </form>
    </div>

    <!-- MODAL -->
    <div class="container">
        <div class="modal fade" id="modalBuy">
            <div class="modal-dialog">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">Resultado</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        <p id="result"></p>
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="button" class="btnClose btn" data-dismiss="modal" onclick="goback()"><i class="fas fa-close"></i>Cerrar</button>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- FOOTER -->
    <div>
        <%- include('footer') -%>
    </div>
    <script>
        function total() {
            var units = document.getElementById('units').value
            var price = '<%=product.price%>';
            var total = units * price;
            document.getElementById('total').innerHTML = total;
        }

        function goback() {
            var amount = document.getElementById('units').value;
            if (amount != 0) {
                location.href = '/'
            }
        }

        function validation() {
            var amount = document.getElementById('units').value;
            if (amount == 0) {
                document.getElementById('result').innerHTML = "No ha seleccionado una cantidad v√°lida"
            } else {
                document.getElementById('result').innerHTML = "Producto agregado exitosamente !"
            }
        }
    </script>
    <script src="/javascripts/scripts.js"></script>

</body>

</html>