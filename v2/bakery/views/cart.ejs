<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <meta http-equiv="X-UA-Compatible" content="ie=edge"> -->
    <link rel="icon" type="image/png" href="/images/iconGeneral.png" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title>
        <%= title %>
    </title>
</head>

<header class="sticky-top">
    <%- include('navbar') -%>
</header>

<body>
    <!-- MODAL -->
    <div>
        <%- include('search') -%>
    </div>

    <!-- CONTENT -->
    <div class="container productArea">
        <div class="row d-flex justify-content-center">
            <h2 class="titleSection">Carrito de compras </h2>
        </div>
        <hr>
        <div class="row">
            <div class="col-8">
                <p class="name1"> Lista de productos </p>
                <hr>
            </div>
            <div class="col-4">
                <p class="name1"> Resumen </p>
                <hr>
            </div>
        </div>
        <div class="row">
            <!-- Product list -->
            <div class="col-8">
                <!-- for de productos en el carrito -->
                <div class="row rowOrder">
                    <div class="col-1 centerVertically"><i class="fas fa-trash-alt"></i></div>
                    <div class="col-3 centerVertically"><img src="/images/product3.jpg" alt="" width="100" height="80"></div>
                    <div class="col-3">
                        <div class="row ">
                            <p class="categoryName"> Producto 1</p>
                        </div>
                        <div class="row ">
                            <p class="categoryName"> $ 100</p>
                        </div>
                    </div>
                    <div class="col-5 centerVertically">
                        <input id="units" type="number" required value="0" min="0" max="1000" step="1" onclick="total()" />
                        <button type="button" class="btnClose btn" data-toggle="modal" data-target="#modalUpdate" onclick="principal()"><i class="fas fa-check"></i> Actualizar</button>
                    </div>
                </div>
                <hr>
                <!-- fin de for -->
                <hr>
            </div>

            <!-- Resume -->
            <div class="col-4">
                <div class="row">
                    <div class="col">
                        <p class="categoryName"> Subtotal:</p>
                    </div>
                    <div class="col">
                        <p class="categoryName">$ 0</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <p class="categoryName"> Env√≠o:</p>
                    </div>
                    <div class="col">
                        <p class="categoryName"> $ 0 </p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col">
                        <p class="categoryName"> TOTAL: </p>
                    </div>
                    <div class="col">
                        <p class="categoryName"> $ 0 </p>
                    </div>
                </div>
                <hr>
                <div class="row d-flex justify-content-left">
                    <div class="col">
                        <button type="button" class="btnClose btn"><i class="fas fa-arrow-right"></i> Siguiente</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- MODAL -->
    <div class="container">
        <div class="modal fade" id="modalUpdate">
            <div class="modal-dialog">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">Resultado</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        Producto actualizado exitosamente !
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="button" class="btnClose btn" data-dismiss="modal"><i class="fas fa-close"></i>Cerrar</button>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- FOOTER -->
    <div>
        <%- include('footer') -%>
    </div>

    <script>
        function principal() {
            document.getElementById('units').value = '0';
        }
    </script>

</body>

</html3