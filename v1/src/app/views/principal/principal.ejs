<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <meta http-equiv="X-UA-Compatible" content="ie=edge"> -->
    <link rel="icon" type="image/png" href="/img/iconGeneral.png" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link href="/styles/style.css" rel="stylesheet" type="text/css" />
    <title>Las Delicias</title>
</head>

<header class="sticky-top">
    <%- include('navbar') -%>

</header>

<body>

    <p>Bienvenido a
        <%= title %>
    </p>
    <!-- MODAL -->
    <div class="container">
        <div class="modal fade" id="modalSearch">
            <div class="modal-dialog">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title">Resultado de la b√∫squeda</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        No hay resultados
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                        <button type="button" class="btnClose btn" data-dismiss="modal"><i class="fas fa-close"></i>Cerrar</button>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- BANNER -->
    <div>
        <%- include('banner') -%>
    </div>

    <!-- CATEGORIES -->
    <div>
        <%- include('categories') -%>
    </div>

    <!-- PRODUCTS-->
    <div>
        <%- include('products') -%>
    </div>

    <!-- ***** -->
    <div class="container">

        <div class="row">
            <div class="col-md-6 mt-4 text-center">
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Descripcion</th>
                    </tr>
                    <% for (var i = 0; i < category.length; i ++) { %>
                        <tr>
                            <td>
                                <%= category[i].id_category %>
                            </td>
                            <td>
                                <%= category[i].name_category %>
                            </td>
                            <td>
                                <%= category[i].description_category %>
                            </td>
                        </tr>
                        <% } %>
                </table>
            </div>
        </div>
        <div class="col-md-6 mt-4 card">
            <form class="card-body" action="/principal" method="post">
                <h3 class="card-title">Agregar categoria</h3>
                <div class="form-group">
                    <input name="title" type="text" class="form-control" placeholder="Nombre de categoria">
                </div>
                <div class="form-group">
                    <input name="news" type="text" class="form-control" placeholder="Descripcion de la categoria">
                </div>
                <input type="submit" class="btn btn-primary">
            </form>
        </div>

    </div>

    <!-- FOOTER -->
    <div>
        <%- include('footer') -%>
    </div>

    <script src="/js/scripts.js"></script>

</body>

</html>